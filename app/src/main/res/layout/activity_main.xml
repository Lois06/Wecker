<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.csbe.loismula.wecker.MainActivity">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="3dp"
        android:headerBackground="@android:color/holo_orange_dark"
        android:numbersSelectorColor="@android:color/holo_orange_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/alarm_on"
        android:layout_width="124dp"
        android:layout_height="38dp"
        android:text="Turn on alarm"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="428dp"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/alarm_off"
        android:layout_width="144dp"
        android:layout_height="38dp"
        android:layout_marginTop="466dp"
        android:text="Turn off "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/back"
        android:layout_marginLeft="48dp" />

    <TextView
        android:id="@+id/update_text"
        android:layout_width="286dp"
        android:layout_height="35dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="348dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back"
        android:layout_width="125dp"
        android:layout_height="37dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="466dp"
        android:text="Back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/picDate"
        android:layout_width="145dp"
        android:layout_height="36dp"
        android:text="Pic Date"
        app:layout_constraintLeft_toRightOf="@+id/alarm_on"
        android:layout_marginLeft="49dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="430dp" />

    <TextView
        android:id="@+id/showDate"
        android:layout_width="217dp"
        android:layout_height="20dp"
        android:layout_marginLeft="84dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/update_text" />
</android.support.constraint.ConstraintLayout>
